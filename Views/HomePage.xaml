<Page
    x:Class="biomed.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="48" FontWeight="Light" Text="欢迎使用"/>
            <TextBlock FontSize="64" FontWeight="Bold" Text="{x:Bind ViewModel.UserStore.CurrentUser.Username, FallbackValue='用户'}" HorizontalAlignment="Center"/>
            <TextBlock Text="中医药信息平台" FontSize="28" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page> 